/* pages/signIn/signIn.wxss */
.wrap {
  width: 650rpx;
  margin: 0 auto;
  margin-top: 30rpx
}
.input-container {
  position: relative;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  padding: 0 2.5rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #d7d7d7;
}
.input-container .txt{
  position: absolute;
  width: 100rpx;
  display: inline-block;
  font-family: PingFang-SC-Regular;
  text-align: left;
  font-size: 12pt;
  margin-left: 10rpx;
  color: #444;
}
input {
  border-radius: 0;
  border: 0;
  display: inline-block;
  font-family: PingFang-SC-Regular;
  font-size: 11pt;
  height: 96rpx;
  width: 100%;
  padding: 0 110rpx;
  color: #777;
}
.btn {
    height: 96rpx;
    line-height: 96rpx;
    background-color: #eee;
    border-radius: 6rpx;
    border: 0;
    color: #848689;
    text-align: center;
}
.login{
  margin: 30rpx 0;
  margin-top: 40rpx;
}
.login.active{
  background: #f23030;
  color: #fff;
}
.register{
  border: 2rpx solid #f23030;
  color: #f23030;
  background: #fff;
}
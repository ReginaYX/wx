/* pages/details/details.wxss */
swiper{
  height: 750rpx;
}
.basicInfo{
  border-bottom: 20rpx solid #e8e8ed;
}
.fn_wrap{
  display: flex;
  justify-content: space-between;
  margin: 14rpx 30rpx;
  margin-top: 20rpx;
}
.goods_name{
  font-size: 14pt;
  color: #333;
}
.fn_wrap .heart{
  width: 80rpx;
  background: url(data:image/png;base64,)  no-repeat center center/80% auto;
}
.fn_wrap .heart.active{
  width: 79rpx;
  background: url(data:image/png;base64,) no-repeat center center/80% auto;
}
.price_wrap{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 30rpx;
  padding-bottom: 14rpx;
}
.price .p_symbol{
  color:#e4393c;
  font-size: 10pt;
  align-self: center;
}
.price_wrap .price{
  color:#e4393c;
  display: flex;
}
.skuCont{
  border-bottom: 20rpx solid #e8e8ed;
}
.sku{
  display: flex;
  margin: 12rpx 0;
}
.sku .label{
  font-size: 10pt;
  color: #999;
  margin: 10rpx 30rpx;
}
.sku_list{
  display: flex;
  align-items: center;
}
.sku_list .option{
  margin: 0 8rpx;
  font-size: 10pt;
  color: #555;
  height: 45rpx;
  padding: 0 14rpx;
  line-height: 45rpx;
  text-align: center;
  border: 2rpx solid #999;
  border-radius: 4rpx;
}
.sku_list .option_selected{
  color:#e4393c;
  border-color: #e4393c;
}
.sku_num{
  padding-bottom: 14rpx;
  margin-top: 18rpx;
}
.num_wrap{
  display: flex;
} 
.num_wrap .minus{
  border: 2rpx solid #999;
  border-right: none; 
  width: 50rpx;
  text-align: center;
  margin-left: 8rpx;
  color: #333;
  box-sizing: border-box;
}
.num_wrap .num{
  border: 2rpx solid #999;
  width: 80rpx;
  text-align: center;
  color: #333;
  font-size: 10pt;
  line-height: 45rpx;
}
.num_wrap .plus{
  border: 2rpx solid #999;
  border-left: none; 
  width: 50rpx;
  text-align: center;
  color: #333;
  box-sizing: border-box;
}
.num_wrap .minus_disabled{
  color: #999;
}
.detailTab{
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.detailTab .tab{
  width: 50%;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 4rpx solid #fff; 
}
.detailTab .tab.active{
 border-bottom: 4rpx solid #e4393c; 
 transition: border-bottom 2s ease;
}
.content{
  padding: 0 30rpx;
  padding-top: 24rpx;
}
.content .content-desc{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 4rpx solid #e8e8ed;
  font-size: 12pt;
  color: #333;
}
.content-desc .descName{
  width: 290rpx;
  padding-left: 12rpx;
}
.content-desc .descVal{
  width: 270rpx;
}
.content-split{
  margin-bottom: 20rpx;
}
.card {
  background: #fff;
  box-shadow: 0 2.5rpx 10rpx rgba(0,0,0,.3);
  margin: 30rpx;
  border-radius: 16rpx;
  font-size: 14pt;
  margin-bottom: 100rpx;
}
.fec-card-header {
  font-weight: 700;
  border-bottom: 2rpx solid #eaeaea;
  padding: 20rpx 30rpx;
  color: #333;
}
.fec-card-content{
  padding: 20rpx 30rpx;
  color: #333;
}
.review-content{
  font-size: 12pt;
  line-height: 60rpx
}
.review_list_remark {
  font-size: 10pt;
  color: #777;
  line-height: 80rpx;
}
.audit_date{
  margin-top: -10rpx;
}
.de_btn_bar{
  display: flex;
  overflow: hidden;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 120;
  height: 100rpx;
  width: 100%;
  border-top: 2rpx solid #e8e8ed;
  background-color: hsla(0,0%,100%,.95);
}
.de_btn_bar .icon_cart{
  width: 30%;
  color: #333;
  font-size: 8pt;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.de_btn_bar .icon_cart .icon{
  width: 50rpx;
  height: 50rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.de_btn_bar .icon_cart .icon .cartNum{
  margin-left: 36rpx;
  background: #e4393c;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  width: 30rpx;
  height: 30rpx;
}
.cartNum.drop{
  animation: drop .8s cubic-bezier(0.36,0,0.64,1.0)
}
@keyframes drop{
  0%{
    transform: translateY(-100rpx);
    opacity: 0;
  }
  100%{
    transform: translateY(0);
    opacity: 1;
  }
}
.de_btn_bar .btn{
  width: 35%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 29rpx;
}
.de_btn_bar .btn_orange{
  background: linear-gradient(to right,#FFDC50,#FFB400);
}
.de_btn_bar .btn_buy{
  background: linear-gradient(to right,#FF3250,#FF0A0A);
}
/* pages/order/order.wxss */

.address_null {
  position: relative;
  background: #fff;
  padding: 0 20rpx 10rpx;
  font-size: 12pt;
  color: #333;
  line-height: 100rpx;
  font-weight: 200rpx;
  font-family: -apple-system, Helvetica, sans-serif;
  height: 100rpx;
}

.address_null .after {
  content: "";
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  width: 12rpx;
  height: 20rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-repeat: no-repeat;
  background-size: 100%;
  position: absolute;
  top: 50%;
  right: 0;
  margin-right: 20rpx;
  margin-top: -10rpx;
}

.address_new.address_new_border {
  border-bottom: 20rpx #f7f7f7 solid;
  background: #fff url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAIAAAAAKBAMAAACOO0tGAAAABGdBTUEAALGPC/xhBQAAAAFzUkdCAK7OHOkAAAAnUExURf///4u16Oxtbezz/J3B7NDh9vSmprjS8vGNjfjDw/vd3f7w8O57e0EOI68AAABSSURBVCjPY2CAAE4l7GACVJ4hUBArEIXJL8KuXw0mz4xdv2ABVJ77EHYDGmAGmGDXLwKT58CuX2cDTIEjdgOcYfJJ2A3Qgsmz4/CBwWgQUiMIAXzCOFELLk/nAAAAAElFTkSuQmCC) -14rpx bottom repeat-x;
  background-size: 120rpx 8rpx;
}

.address_new {
  transition: 0.2s ease;
  background: #fff;
  position: relative;
  padding-bottom: 20rpx;
}

.wrap {
  padding: 20rpx;
}

.li {
  border-top: 1rpx solid #e5e5e5;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
}

.li:first-child {
  border: none;
}

.check {
  align-self: center;
  flex-shrink: 0;
}

.pic {
  width: 130rpx;
  height: 150rpx;
  background: no-repeat center/cover;
  flex-shrink: 0;
}

.desc {
  overflow: hidden;
  width: 60%;
  flex-shrink: 0;
}

.name {
  font-size: 12pt;
  color: #333;
  width: 400rpx;
  height: 40rpx;
  overflow: hidden;
  font-weight: 400;
}

.attr {
  font-size: 28rpx;
  color: #666;
}

.price {
  font-size: 32rpx;
  color: #e4393c;
}

.minus {
  font-size: 32rpx;
}

.number {
  margin-top: -31rpx;
  float: right;
  height: 50rpx;
  font-size: 24rpx;
  color: #666;
}

.shipping {
  padding: 20rpx 40rpx 20rpx 0;
  position: relative;
}

.shipping .before, .buy_msg_v2 .before {
  content: "";
  position: absolute;
  z-index: 1;
  pointer-events: none;
  background-color: #e5e5e5;
  height: 2rpx;
  left: 0;
  right: 0;
  top: 0;
  right: -20rpx;
}

.shipping .shipping_send {
  position: absolute;
  left: 20rpx;
  top: 24rpx;
  font-weight: 400;
  font-size: 14pt;
  float: left;
}

.shipping_content {
  text-align: right;
}

.shipping_content .shipping_method {
  margin: 10rpx 0;
  font-size: 12pt;
}

.shipping_content .type_justify {
  overflow: hidden;
  margin: 0;
  color: #666;
  font-size: 10pt;
}

shipping .after {
  content: "";
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  width: 12rpx;
  height: 20rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-repeat: no-repeat;
  background-size: 100%;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -10rpx;
}

.buy_msg_v2 {
  position: relative;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx 40rpx 20rpx 0;
}

.buy_msg_v2_tit {
  position: absolute;
  top: 0;
  left: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 14pt;
  display: inline-block;
}

.buy_msg_v2 input {
  padding-left: 195rpx;
  width: 100%;
  font-size: 13pt;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  border: none;
  background: none;
  border-radius: 0;
  margin-top: -19rpx;
}

.conponListTab {
  position: relative;
}

.conponListTab .before {
  content: "";
  /* position: absolute; */
  z-index: 1;
  pointer-events: none;
  background-color: #e5e5e5;
  height: 2rpx;
  right: 0;
  top: 0;
}

.conponListTab .content {
  position: relative;
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #666;
  padding: 26rpx 60rpx 26rpx 150rpx;
}

.conponListTab .content .strong {
  display: inline-block;
  font-weight: 400;
  position: absolute;
  left: 20rpx;
  top: 18rpx;
  font-size: 14pt;
  color: #333;
}

.conponListTab .content .em {
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  color: #999;
  padding-right: 0;
}

.conponListTab .content .after {
  content: "";
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  width: 12rpx;
  height: 20rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-repeat: no-repeat;
  background-size: 100%;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -10rpx;
}

.end {
  border-bottom: 20rpx #f7f7f7 solid;
}

.buy_section {
  position: relative;
  overflow: hidden;
}

.buy_chart {
  position: relative;
  background-color: #fff;
  padding: 20rpx;
  font-size: 13pt;
}

.buy_chart_item {
  font-family: arial;
  display: flex;
}

.buy_chart_item_text {
  flex: 1;
  color: #333;
}

.buy_chart_item_price {
  color: #e93b3d;
}

.buy_chart_item:not(:first-child) {
  margin-top: 6rpx;
}

.buy_chart_item_tip {
  color: #999;
}

.pay_area {
  overflow: hidden;
  text-align: center;
  padding: 0 20rpx;
  background: #fff;
  position: relative;
}

.pay_area .price {
  font-size: 14pt;
  font-weight: 700;
  margin-bottom: 40rpx;
  text-align: right;
  color: #333;
}

.pay_area .price .strong {
  color: #e93b3d;
  font-weight: 400;
  display: inline-block;
}

.pay_area .mod_btns {
  margin: 20rpx 0;
}

.mod_btns .mod_btn {
  background: #3884ff;
  color: #fff;
  display: block;
  flex: 1;
  min-width: 0;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  font-size: 14pt;
  border-radius: 8rpx;
  position: relative;
}

/* pages/prodlist/prodlist.wxss */
.pro_filter{
  height: 80rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.pro_filter_items{
  padding: 16rpx 0;
  display: flex;
  justify-content: space-between;
}
.pro_filter_items .item{
  padding: 0 10rpx;
  font-size: 10pt;
  flex: 1;
  text-align: center;
  flex-shrink:0;
}
.pro_filter_items .item.active{
  color: #e93b3d
}
.item_options{
  display: none;
  background: white;
}
.item_options .selection{
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  position: relative;
  z-index: 100;
}
.selection .J_ping{
  background: #fff;
  height: 90rpx;
  font-size: 10pt;
  padding: 0 70rpx 0 40rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.selection .J_ping.active{
  color: #e93b3d
}
.selection .J_ping.active .icon_true{
  display: block;
}
.zh{
  width: 100rpx;
  margin-left: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pro_filter_items .btn_sf{
  width: 40rpx;
  display: flex;
  /* padding: 0 80rpx; */
  justify-content: center;
  align-items: center;
}
.icon_tri{
  width: 24rpx;
  height: 24rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.icon_true{
  display: none;
  width: 28rpx;
  height: 28rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.icon_filter{
  margin-left: 12rpx;
  width: 24rpx;
  height: 24rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.li .item{
  height: 280rpx;
  padding-top: 10rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #f8f8f8;
}
.li .pic{
  padding: 26rpx;
  height: 240rpx;
  width: 240rpx;
  background: no-repeat center center/100% auto;
  float: left;
  background-origin: content-box;
}
.li .content{
  float: left;
  color: #333;
  font-size: 11pt;
  padding: 0 20rpx 16rpx 20rpx;
  height: 240rpx;
  width: 500rpx;
}
.li .name{
  height: 76rpx;
  margin-top: 16rpx;
}
.li .price{
  /* padding-top: 30rpx; */
  color: #e93b3d; 
}
.li .symbol{
  font-size: 7pt;
  display: inline-block;
}
.ex_price{
  padding-top: 20rpx;
  text-decoration: line-through;
}
.ex_price .symbol{
  text-decoration: none;
}
.filter{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 200;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  opacity: 0;
  display: none;
}
@keyframes show{
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}
.filter.active{
  display: block;
  animation: show .6s ease forwards;
}
.filter-inner{
  width: 524rpx;
  background: #f8f8f8;
  min-height: 100vh;
  float: right;
}
.filter-cate .item-title{
  margin: 20rpx 0; 
  line-height: 84rpx;
  font-size: 12pt;
  color: #333;
  height: 84rpx;
  background: #fff;
  padding: 0 20rpx;
}
.filter-cate .ul .li{
  font-size: 10pt;
  color: #555;
  background: #fff;
  height: 66rpx;
  line-height: 66rpx;
  padding-left: 50rpx;
  margin-bottom: 6rpx;
}
.filter-cate .ul .li.active{
  color: #e93b3d
}